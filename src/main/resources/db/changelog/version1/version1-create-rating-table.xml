<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="version1-1" author="postgres">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="rating"/>
            </not>
        </preConditions>

        <createTable tableName="rating">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="passenger_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_rating_passenger" references="passenger(id)"/>
            </column>
            <column name="driver_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_rating_driver" references="driver(id)"/>
            </column>
            <column name="rating_value" type="tinyint">
                <constraints nullable="false" checkConstraint="rating_value IN (1, 2, 3, 4, 5)"/>
            </column>
            <column name="comment" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="version1-2" author="postgres">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="rating_source"/>
            </not>
        </preConditions>

        <createTable tableName="rating_source">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="rating_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_rating_source_rating" references="rating(id)"/>
            </column>
            <column name="source" type="varchar(15)">
                <constraints nullable="false" checkConstraint="rating_value IN (PASSENGER, DRIVER)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="version1-3" author="postgres">
        <preConditions onFail="MARK_RAN">
            <columnExists columnName="passenger_id" tableName="rating"/>
            <columnExists columnName="driver_id" tableName="rating"/>
        </preConditions>

        <dropColumn tableName="rating" columnName="passenger_id"/>
        <dropColumn tableName="rating" columnName="driver_id"/>
    </changeSet>

    <changeSet id="version1-4" author="postgres">
        <preConditions onFail="MARK_RAN">
            <columnExists columnName="rating_id" tableName="rating"/>
        </preConditions>

        <dropColumn tableName="rating" columnName="rating_id"/>
        <addColumn tableName="rating">
            <column name="ride_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_rating_ride" references="ride(id)"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>